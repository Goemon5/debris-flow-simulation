{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvModels;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scalarSource
{
    type            scalarSemiImplicitSource;
    active          yes;
    
    scalarSemiImplicitSourceCoeffs
    {
        selectionMode   sphereToCell;
        origin          (5 5 2);
        radius          0.5;
        
        sources
        {
            s       (1.0 0.0);
        }
    }
}

