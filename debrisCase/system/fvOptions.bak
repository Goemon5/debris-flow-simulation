FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// OpenFOAM v11では初期濃度からの拡散のみ
// 継続的な匂い源は fixedValueConstraint で代用可能

odorSource
{
    type            fixedValueConstraint;
    active          yes;
    
    fixedValueConstraintCoeffs
    {
        selectionMode   cellSet;
        cellSet         odorSourceCells;
        
        fieldValues
        {
            s           1.0;  // この領域で常に濃度1.0を維持
        }
    }
}

