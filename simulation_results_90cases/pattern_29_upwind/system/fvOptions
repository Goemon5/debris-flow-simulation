FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scent_source_upwind
{
    type            semiImplicitSource;
    active          yes;

    semiImplicitSourceCoeffs
    {
        selectionMode   points;
        points          
        (
            (5.0 7.5 1.0)
        );
        
        volumeMode      absolute;
        
        sources
        {
            T
            {
                explicit    1e5;    // Source term value (kg/m3/s)
                implicit    0;      // No implicit part
            }
        }
    }
}

